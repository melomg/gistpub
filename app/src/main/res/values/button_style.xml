<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingRight">@dimen/min_size</item>
        <item name="android:paddingLeft">@dimen/min_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.File">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_dark_blue_selector</item>
    </style>

    <style name="LoginType">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:layout_margin">@dimen/x_min_size</item>
    </style>

    <style name="Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_login_selector</item>
        <item name="android:layout_margin">@dimen/medium_size</item>
    </style>
</resources>